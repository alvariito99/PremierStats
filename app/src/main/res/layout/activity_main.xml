<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Texto de bienvenida (20% del espacio) -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Bienvenido a Premier Stats"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp" /> <!-- Aquí se usa layout_marginBottom en lugar de marginBottom -->

    <!-- Imagen (40% del espacio) -->
    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@drawable/premierleague"
        android:contentDescription="Imagen de bienvenida" />

    <!-- Campo de texto para el usuario (20% del espacio) -->
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="Usuario"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginVertical="8dp" />

    <!-- Botón para navegar (20% del espacio) -->
    <Button
        android:id="@+id/navigateToCreditsButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Ir a Créditos"
        android:textSize="16sp" />
</LinearLayout>
